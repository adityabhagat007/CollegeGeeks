<body class="body">

<section id="questionPage ">
      <div class="container">
            <div class="row container">
                  <% if(error.length > 0) { %>
                        <%= error %>; 
                  <% } else { %>
                  <!-- <%= question %> -->
                  <div class =" Ans-question card mb-2">
                        <div class="card-body">
                              <div class="card-title"><h3><%= question.statement %>?  </h3></div>
                              <div style="float: right;" data-bs-toggle="modal" data-bs-target="#ansModal" >Click Here to answer</div>
                        </div>
                  </div>
                  <% if(question.answers.length>0){ %> 
                  <% question.answers.forEach(element=>{%> 
                  <div class="Answer card mb-2">
                        <div class ="card-body">
                              <div class="author_name">
                                    <a style="font-size: 20px;"href="/PublicProfile"><%=element.authorName%></a>
                                    <span style="float: right;"><%= element.createdAt.toLocaleDateString() %></span>
                              </div>
                              <hr>
                              <div class = "answer_content">
                                    <p><%= element.content %> </p>
                              </div>
                        </div>
                  </div>
                  <% }) %> 
                  <% } else{ %>
                        <span class="display-6 mt-2" style="text-align: center;">Be The first to answer Question<br>
                        </span>
                  <%}%>
                  <% } %> 
            </div>


        <!-- modal part  -->

            <div class="modal fade" id="ansModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                  <div class="modal-dialog modal-lg">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title" >New message</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                      </div>
                      <div class="modal-body">
                        <form method="POST" action="/newanswer">
                              <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mb-4">
                              <div id="answer">
                                <textarea class="form-control" name="answer" type="text" required>
                                </textarea>
                                </div>
                                <input type="hidden" name="questionId" value="<%= question._id %>" />
                              </div>
                              <button type="submit" value="submit" class="btn btn-primary" style="float: right;">Send message</button>
                        </form>
                    </div>
                  </div>
                </div>
      </div>
</section>







